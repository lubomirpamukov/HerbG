@using Herbg.ViewModels.Product
@model DeleteConfirmationViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4>Confirm Delete</h4>
        </div>
        <div class="card-body">
            <p class="text-center">
                Are you sure you want to delete the following item?
            </p>
            <div class="alert alert-warning">
                <strong>Item:</strong> @Model.ItemName<br />
                <strong>Description:</strong> @Model.ItemDescription
            </div>
            <div class="text-center mt-4">
                <button class="btn btn-secondary me-2" data-bs-toggle="modal" data-bs-target="#cancelModal">Cancel</button>
                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmModal">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Delete Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                This action cannot be undone. Do you wish to proceed?
            </div>
            <div class="modal-footer">
                <form asp-area="Admin" asp-action="ConfirmDelete" asp-controller="Home" method="post">
                    <input type="hidden" name="productId" value="@Model.ItemId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Confirmation Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title" id="cancelModalLabel">Cancel Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Deletion has been canceled.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
