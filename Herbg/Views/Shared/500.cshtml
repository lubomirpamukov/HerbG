@{
    Layout = "_Layout"; // Ensure your layout page is set if needed.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>500 - Internal Server Error</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJf+MQF7y7g+o9s0O+5QU2bXsQ7I5qFzHk6qM0gkE26m5Jt4rY6JQ72Z15+f" crossorigin="anonymous">
    <!-- Custom CSS for 500 page -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .error-container {
            text-align: center;
            margin-top: 100px;
        }

            .error-container h1 {
                font-size: 120px;
                color: #dc3545;
            }

            .error-container h2 {
                font-size: 36px;
                color: #495057;
            }

            .error-container p {
                font-size: 18px;
                color: #6c757d;
            }

        .btn-custom {
            background-color: #dc3545;
            color: #fff;
            font-weight: bold;
            padding: 12px 25px;
            border-radius: 25px;
            text-decoration: none;
            margin-top: 20px;
        }

            .btn-custom:hover {
                background-color: #c82333;
                color: #fff;
            }

        .icon {
            font-size: 80px;
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="error-container">
            <!-- Optional Icon -->
            <i class="fas fa-server icon"></i>

            <h1>500</h1>
            <h2>Oops! Something Went Wrong</h2>
            <p>We're experiencing some technical difficulties. Our team is working on it.</p>
            <a href="/" class="btn btn-custom">Go Back to Home</a>
            <p class="mt-3">
                <small>If the problem persists, please <a href="mailto:support@example.com">contact us</a>.</small>
            </p>
        </div>
    </div>

    <!-- Font Awesome CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <!-- Bootstrap 5 JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-kaqOlgJg9KKmAvE1+jtVRzKojFVggMkfl1GHLjsyAB+V0wTTkZmMzEr6yo4r55Ml" crossorigin="anonymous"></script>
</body>
</html>
