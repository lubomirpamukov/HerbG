@using Herbg.ViewModels.Order
@model IEnumerable<OrderSummaryViewModel>

<div class="container mt-5">
    <h1 class="text-center">My Orders</h1>

    @if (Model.Count() == 0)
    {
        <p class="text-center mt-4">You have not placed any orders yet.</p>
    }
    else
    {
        <table class="table table-striped mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Total Items</th>
                    <th>Total Amount</th>
                    <th>Payment Method</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.Date.ToString("MMMM dd, yyyy - hh:mm tt")</td>
                        <td>@order.TotalItems</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.PaymentMethod</td>
                        <td>
                            <a href="@Url.Action("Details", "Order", new { id = order.OrderId })" class="btn btn-primary btn-sm">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

